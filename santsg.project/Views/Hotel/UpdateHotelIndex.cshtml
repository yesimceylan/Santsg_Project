@model santsg.project.Entities.Hotel;
@{
    ViewData["Title"] = "UpdateHotelIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateHotelIndex</h1>

<form action="UpdateHotel" asp-controller="Hotel" method="post">
    <div class="form-group">
        <label asp-for="Id" ></label>
        <input asp-for="Id" class="form-control" />
        <span class="text-danger">@Html.ValidationMessageFor(m=>m.Id)</span>
        <button type="submit" class="btn btn-primary">Update</button>
    </div>
</form>

