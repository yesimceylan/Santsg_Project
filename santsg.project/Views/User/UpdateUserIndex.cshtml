@model santsg.project.Entities.User;
@{
    ViewData["Title"] = "UpdateUserIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateUserIndex</h1>

<form asp-action="UpdateUser" asp-controller="User" method="post">
    
    
    <div class="form-group">
        <label asp-for="Id"></label>
        <input type="Id" asp-for="Password" class="form-control" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Id)</span>
    </div>
    <button type="submit" class="btn btn-primary">Find</button>
</form>

